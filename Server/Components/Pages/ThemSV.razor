@page "/Themsv"


@rendermode InteractiveServer
@inject ISinhVienServices _service
@inject NavigationManager _nav

<h3>ThemSV</h3>

<EditForm Model="svmoi" OnValidSubmit="guiform" FormName="haha">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name:</label>
        <InputText @bind-Value="svmoi.Name" class="form-control" />
        <ValidationMessage For="@(() => svmoi.Name)" />
    </div>

    <div class="form-group">
        <label>Age:</label>
        <InputNumber @bind-Value="svmoi.Age" class="form-control" />
        <ValidationMessage For="@(() => svmoi.Age)" />
    </div>

    <div class="form-group">
        <label>Class:</label>
        <InputText @bind-Value="svmoi.Class" class="form-control" />
        <ValidationMessage For="@(() => svmoi.Class)" />
    </div>

    <button type="submit" class="btn btn-primary">Add new</button>
</EditForm>
@code {
    public SinhVien svmoi = new SinhVien();

    public async Task guiform()
    {
        await _service.Create(svmoi);

        _nav.NavigateTo("/listsv");
    }
}
